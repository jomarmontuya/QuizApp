
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbdbdb"
    android:orientation="vertical">


    <!-- Creating Stand Alone Toolbar -->

    <android.support.v7.widget.Toolbar
        android:theme="@style/AppTheme.DarkAppbar"
        android:id="@+id/toolbar"
        android:elevation="4dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>


    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Select a topic for Quiz"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            
            android:layout_marginBottom="10dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="4dp"
            android:layout_gravity="center"
            android:padding="16dp"
            android:rowCount="3"
            android:columnCount="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            

            <!-- Row One -->

            <android.support.v7.widget.CardView
                android:layout_marginBottom="10dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                android:layout_width="147dp"
                android:layout_height="141dp">

                <LinearLayout
                    android:id="@+id/historyLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/history"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <View
                        android:background="@color/colorAsh"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        
                        style="@style/topic_textView"
                        android:text="History"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                  android:layout_marginBottom="10dp"
                  app:cardElevation="2dp"
                  app:cardCornerRadius="4dp"
               
                  android:layout_width="147dp"
                  android:layout_height="141dp">

                <LinearLayout
                    android:id="@+id/geographyLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/geography"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <View
                        android:background="@color/colorAsh"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    
                    <TextView
                        style="@style/topic_textView"
                        android:text="Geography"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!-- Row Two-->

            
            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                android:layout_marginRight="35dp"
                android:layout_width="147dp"
                android:layout_height="141dp">

                <LinearLayout
                    android:id="@+id/spaceLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/space"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <View
                        android:background="@color/colorAsh"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        style="@style/topic_textView"
                        android:text="Space"
                       />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  app:cardElevation="2dp"
                  app:cardCornerRadius="4dp"
                  android:layout_width="147dp"
                  android:layout_height="141dp">

                <LinearLayout
                    android:id="@+id/engineeringLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/engineering"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <View
                        android:background="@color/colorAsh"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    
                    <TextView
                        style="@style/topic_textView"
                        android:text="Engineering"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>


             <!-- Row Three-->


            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                android:layout_marginRight="35dp"
                android:layout_width="147dp"
                android:layout_height="141dp">

                <LinearLayout
                    android:id="@+id/programmingLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/programming"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <View
                        android:background="@color/colorAsh"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                       style="@style/topic_textView"
                        android:text="Programming"
                     />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  app:cardElevation="2dp"
                  app:cardCornerRadius="4dp"
                  android:layout_width="147dp"
                  android:layout_height="141dp">

                <LinearLayout
                    android:id="@+id/businessLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/business"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <View
                        android:background="@color/colorAsh"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    
                    <TextView
                        style="@style/topic_textView"
                        android:text="Business"
                    />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </GridLayout>


    </ScrollView>

</LinearLayout>